{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": [
		"packages/**/*.ts",
		"packages/**/*.d.ts",
		"packages/**/*.tsx",
		"packages/**/*.vue",
		"apps/**/*.ts",
		"apps/**/*.d.ts",
		"apps/**/*.tsx",
		"apps/**/*.vue",
		"node_modules/.vite/unplugin-vue-components.d.ts" // Fix for Vite
	],
	"references": [
		{ "path": "./packages/admin-ui" },
		{ "path": "./apps/style-guide" }
	]
}
